{
  "semi": true,
  "tabWidth": 4,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": false,
  "endOfLine": "auto",

  "printWidth": 100,
  "arrowParens": "always",
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "quoteProps": "as-needed",
  "proseWrap": "preserve",
  "embeddedLanguageFormatting": "auto",

  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
